<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="#f00"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/namecity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="The lilac Field"
        android:textColor="#FFFBFB"
        android:textSize="26dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/infocity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/namecity"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-41dp"
        android:text="Kharkov region"
        android:textColor="#ffff"
        android:textSize="22dp"></TextView>

    <ImageView
        android:id="@+id/anh"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_gio"></ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infocity"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nhietdo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/infocity"
            android:layout_marginTop="86dp"
            android:text="Nhiệt độ"
            android:textColor="#ffff"></TextView>


        <ImageView
            android:id="@+id/tmgknm"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/ic_gio"></ImageView>

        <TextView
            android:id="@+id/tknm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="84dp"
            android:text="Knm"
            android:textColor="#ffff"
            android:textSize="12dp"></TextView>

        <ImageView
            android:id="@+id/imgdoam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="84dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_doam"></ImageView>

        <TextView
            android:id="@+id/doAm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:text="Độ ẩm"
            android:textColor="#ffff"></TextView>

    </LinearLayout>
</RelativeLayout>